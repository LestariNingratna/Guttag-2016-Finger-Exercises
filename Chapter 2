if x%2!=0 and y%2!=0 and z%2!=0:
 if x>y and x>z:
  print('all numbers are odd number and x is the largest odd number')
 elif y>z:
  print('all numbers are odd number and y is the largest odd number')
 else:
  print('all numbers are odd number and z is the largest odd number')
elif x%2==0 and y%2==0 and z%2==0:
 print('None of them are odd number')
else:
 if x%2==0:
  print('x is not an odd number')
 elif y%2==0:
  print('y is not an odd number')
 else:
  print('z is not an odd number')